    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0" id="CustomerComplaints">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Complaint Type</th>
                                <th>Complaint Status</th>
                                <th>Entry Date</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
